<div class="sign-up-form">
  <%= form_tag '/login' do %>
    <%= text_field_tag :email, nil, placeholder: "Email", class: "sign-up-form-input" %>
    <%= password_field_tag :password, nil, placeholder: "Password", class: "sign-up-form-input"%>
    <%= submit_tag "Sign In", class: "submit sign-up-form-input" %>
  <% end %>

  <p>DON'T HAVE AN ACCOUNT?  <span class="sign-up-link"><%= link_to "SIGN UP", new_user_path %></span></p>
</div>