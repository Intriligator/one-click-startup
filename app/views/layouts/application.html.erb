<!DOCTYPE html>
<html>
<head>
  <title>OneClickStartup</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
  <%= link_to current_user.name, home_path %>
  <%= link_to "Logout", logout_path %>
  <%= link_to "Submit Product", new_product_path %>
  <% if current_user.admin %>
    <%= link_to "Pending Products", pending_products_path %>
  <% end %>
<% end %>
<%= yield %>

</body>
</html>
