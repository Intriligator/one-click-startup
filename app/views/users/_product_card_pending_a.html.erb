<% @products.each do |product| %>
<div class="four columns">
      <div class="product-card">

          <div class="product-title-container"> 
              <%= image_tag product.images.first.url %>
          </div>

        <div class="product-details">   
          <p class="product-title"><b><%= product.name %></b></p>         
          <p class="product-tagline"><%= product.tagline %></p>
          <p class="product-user">Posted by: <%= link_to product.user.name, user_path(product.user) %></p>
          <p class="info"><span class="green"><%= link_to "Approved", product_path(product, product: { approved: true } ), method: "PUT" %></span><span class="social">
            <%= link_to "Edit", edit_product_path(product) %> |
            <%= link_to "Message User", new_message_path(converser_id: product.user.id) %> |
            <%= link_to "Delete", product_path(product), method: "DELETE" %>
          </span></p>
        </div>
      </div><!--product-card-->
    </div><!--column-->
  <% end %>