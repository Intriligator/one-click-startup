<%= form_for user do |f| %>
  <div>
    <%= f.text_field :first_name, placeholder: "First Name" %>
  </div>

  <div>
    <%= f.text_field :last_name, placeholder: "Last Name" %>
  </div>

  <div>
    <%= f.text_field :email, placeholder:"Email" %>
  </div>

  <div>
    <%= f.password_field :password, placeholder: "Password" %>
  </div>

  <div>
    <%= f.text_field :location, placeholder:"Location" %>
  </div>

  <div>
    <%= f.text_field :occupation, placeholder:"Occupation" %>
  </div>

  <div>
    <%= f.text_field :bio, placeholder:"Tell us about yourself..." %>
  </div>

  <div>
    <%= f.submit "Save" %>
    <p><small>By hitting submit you are agreeing to our <%= link_to "terms and services", terms_path  %></small></p>
  </div>
<% end %>